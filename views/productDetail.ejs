<!DOCTYPE html>
<html lang="en">
<!--Acá va el head-->
<%- include ("partials/head.ejs") %>

    <body class="body">
        <!--Acá va el header-->
        <%- include ("partials/header.ejs") %>

            <main id="main-content">
                <!--Acá va el partial de producto-->
                
                <article class="detalle-producto br-bottom">
                    <div class="w-100 flex-prod">
                        <div class="img-pd">
                            <img src="/images/product-images/<%= product.image %>" class="w-100"/>
                        </div>
                    </div>

                        <div class="texto-pd ">
                            <div class="flex justify-between padding-8-48 ">
                                <h2 class="text-into-block text-left tx-negro">
                                     <%= product.name %>
                                </h2>
                                <h2 class="tx-negro">
                                    $ <%= product.price %>
                                </h2>
                            </div> 
                        </div> 

                    <div class="w-100 padding-8-48">     
                    <button class="boton-añadir w-100 ">
                    <% if (locals.userLogged) { %>
                    <a href= "/products/productCart" >Añadir al carrito</a></button>
                    <% } else { %> 
                    <a href= "/user/login" >Añadir al carrito</a></button>
                    <% } %> 

                    <% if (locals.userLogged && userLogged.admin) { %> 
                    <button class="boton-añadir w-100 "><a href="/products/<%= product.id %>/edit">Editar</a></button>
                    <form action="/products/<%= product.id %>?_method=DELETE" method="POST" >
                    <button type="submit" class="boton-añadir w-100">ELIMINAR</button></form>
                    <% } %> 
                    </div>   
                    
                    <div class="padding-8-48">
                        <h3>
                             <%= product.name %>
                        </h3>
                            <p class="">
                                <%= product.description %>
                            </p>
                    </div>
                </article>                 
                    <!--<button class="boton-cantidad-product">- 1 +</button>-->

