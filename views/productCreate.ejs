<!DOCTYPE html>
<html lang="en">
  <!--Acá va el head-->
  <%- include ("partials/head.ejs") %>

  <body class="body">
    <!--Acá va el header-->
    <%- include ("partials/header.ejs") %>
    <main id="main-content">
      <section class="padding-24">
        <div>
          <form
            class="register-form"
            action="/products"
            method="POST"
            enctype="multipart/form-data"
          >
            <div>
              <h2 >Crear producto</h2>
            </div>

            <div class="form-input">
              <label class="main-label" for="name"></label>
              <input
                class=""
                type="text"
                name="name"
                placeholder="Nombre del producto"
                required
              />
            </div>
            <div class="form-input">
              <label class="main-label" for="price"></label>
              <input
                class=""
                type="text"
                name="price"
                placeholder="Precio: $12.99"
                required
              />
            </div>
            <div class="form-input">
              <label class="main-label" for="description"></label>
              <input
                class=""
                type="text"
                name="description"
                placeholder="Descripción"
                required
              />
            </div>
            <div class="form-input">
              <label class="main-label" for="image"></label>
              <input
                class=""
                type="file"
                name="image"
                placeholder="Foto del producto"
                accept="image/*"
                required
              />
            </div>
            <div class="form-input">
              <label class="main-label" for="stock"></label>
              <select
                class="w-100"
                type="text"
                name="stock"
                placeholder="Stock"
                required
              >
                <option value="" disabled selected>Stock</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
              </select>
            </div>
            <div class="form-input">
              <label class="main-label" for="category"></label>
              <select
                class="w-100"
                type="text"
                name="category"
                placeholder="Categoria"
                required
              >
                <option value="" disabled selected>Categoría</option>
                <option value="Belleza">Belleza</option>
                <option value="Higiene">Higiene</option>
                <option value="Fitoterapia">Fitoterapia</option>
              </select>
            </div>
            <!-- <div class="form-input">
                <label class="main-label" for="name"></label>
                <select class="border-5" type="text" name="name" placeholder="Tamaños" required >
                  <option>tam1</option>
                  <option>tam2</option>
                </select>
              </div> -->
            <div class="register-buttons">
              <button class="w-100 boton-filo tx-blanco bg-higiene-claro border-button" type="submit">Aceptar</button>
              <button class="w-100 boton-filo tx-higiene-claro background-color border-button" type="reset">Cancelar</button>
              
            </div>
          </form>
        </div>
      </section>
    </main>

    <!--Acá va el footer-->
    <%- include ("partials/footer.ejs") %>
  </body>
</html>
