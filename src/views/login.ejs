<!DOCTYPE html>
<html lang="en">
  <!--Acá va el head-->
  <%- include ("./parcials/head.ejs") %>

  <body class="body">
    <!--Acá va el header-->
    <%- include ("./parcials/header.ejs") %>

    <main>
      <section id="main-content">
        <div>
          <form class="register-form" action="/ruta-form" method="POST">
            <div>
              <h2>Ingresar</h2>
            </div>

            <div class="form-input">
              <label class="main-label" for="email">Dirección de email</label>
              <input class="border-5" id="email" type="email" name="email" />
              <p class="required-message">campo obligatorio</p>
            </div>
            <div class="form-input">
              <label class="main-label" for="pasword">Contraseña</label>
              <input
                class="border-5"
                id="password"
                type="password"
                name="pasword"
              />
              <p class="required-message">campo obligatorio</p>
            </div>

            <div class="register-buttons">
              <button class="boton-form" type="submit">Ingresar</button>
            </div>
            <div>
              <p>
                Aun no tenes una cuenta?
                <a href="/register">Crear una</a>
              </p>
            </div>
          </form>
        </div>
      </section>
    </main>

    <!--Acá va el footer-->
    <%- include ("./parcials/footer.ejs") %>
  </body>
</html>
