<!--Acá va el head-->
<%- include ("partials/head.ejs") %>

    <body class="body">
        <!--Acá va el header-->
        <%- include ("partials/header.ejs") %>

            <main id="main-content">
                <!--Acá va el partial de producto-->
                
                <article class="detalle-producto br-bottom">
                    <div class="flex prod-detail">
                        <div class=" tx-medicine w-100 ">
                            <img src="/images/product-images/<%= product.image %>" class="w-100"/>
                        </div>
                    
                        <div class="tx-medicine w-100 px-48 ">
                        <div class="w-100">
                            <div class="flex justify-between align-center w-100 ">
                                <h2 class="text-into-block text-left tx-negro">
                                     <%= product.name %>
                                </h2>
                                <p class="tx-negro">
                                    $ <%= product.price %>
                                </p>
                            </div> 
                        </div> 

                        <div class="py-24 ">
                            <p class="">
                                <%= product.description %>
                            </p>
                            <p>Lorem ipsum dolor, sit amet consectetur adipisicing elit. Explicabo officiis consectetur aperiam incidunt, deserunt ipsa, nulla nemo omnis, ullam aliquid ipsum. Vero, ipsam obcaecati dignissimos numquam eveniet eius aspernatur assumenda?</p>
                        </div>

                    <div class="w-100">     
                    
                    <% if (locals.userLogged) { %>
                    <a  href= "/carrito/<%= userLogged.id %>" ><button class="boton-añadir  w-100 ">Añadir al carrito</button></a>
                    <% } else { %> 
                    <a href= "/user/login" ><button class="boton-añadir  w-100 ">Añadir al carrito</button></a>
                    <% } %> 

                    <% if (locals.userLogged && userLogged.admin) { %> 
                    <!--<button class="boton-añadir w-100 "><a href="/products/<%= product.id %>/edit">Editar</a></button>

                    <form action="/products/<%= product.id %>?_method=DELETE" method="POST" >
                        <button type="submit" class="boton-añadir w-100">Eliminar</button></form>-->
                    <div class="flex">   
                        <form action="/products/<%= product.id %>/edit " method="GET" class="w-50 pd-r-8">
                            <button type="submit" class="boton-añadir w-100">Editar</button>
                        </form>
                        <form action="/products/<%= product.id %>?_method=DELETE " method="POST" class="w-50 pd-l-8" id="boton-eliminar">
                            <button type="submit" class="boton-añadir w-100 tx-white">Eliminar</button>
                        </form>
                    </div> 
                    <% } %>

                    </div>   
                    </div>
                    </div>
